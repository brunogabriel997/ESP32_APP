<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtVw"
        android:layout_marginLeft="-311dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/txtVw" />

    <TextView
        android:id="@+id/txtVw"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:fadingEdge="horizontal"
        android:text="  Biblioteca"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtVw"
        android:layout_marginLeft="-329dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="-69dp"
        android:layout_toRightOf="@+id/txtVw" />

    <TextView
        android:id="@+id/txtV2"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        android:background="@color/white"
        android:text="  Pavilhao Principal"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtVw"
        android:layout_marginLeft="-323dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="-130dp"
        android:layout_toRightOf="@+id/txtVw"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/txtV3"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:background="@color/white"
        android:text="  Departamento Design"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Voltar"
        app:backgroundTint="#000000" />


</RelativeLayout>
